<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#56AB2F"
                android:centerColor="#A8E6CF"
                android:endColor="#4FC3F7" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    
    <!-- Subtle pattern overlay -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="180dp"
                android:centerX="0.5"
                android:centerY="0.5"
                android:startColor="#00FFFFFF"
                android:endColor="#10FFFFFF" />
            <corners android:radius="24dp" />
        </shape>
    </item>
</layer-list> 