<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CollabUp000" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/light_blue</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Background colors -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        
        <!-- Primary colors -->
        <item name="colorPrimary">@color/light_blue</item>
        <item name="colorPrimaryVariant">@color/primary_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Surface colors -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/dark_blue</item>
    </style>

    <style name="Theme.CollabUp000" parent="Base.Theme.CollabUp000" />

    <!-- Custom Chip Style -->
    <style name="CustomChipStyle" parent="Widget.Material3.Chip.Assist">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="chipMinHeight">32dp</item>
        <item name="chipMinTouchTargetSize">32dp</item>
        <item name="chipCornerRadius">16dp</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="chipBackgroundColor">@color/chip_blue</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>
</resources>