<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/recommendation_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recommended for You"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/dark_blue"
        android:layout_marginBottom="12dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recommendation_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/recommendation_loading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Loading recommendations..."
        android:textAlignment="center"
        android:textColor="@color/dark_blue"
        android:visibility="gone" />

    <TextView
        android:id="@+id/recommendation_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Failed to load recommendations"
        android:textAlignment="center"
        android:textColor="@color/error_red"
        android:visibility="gone" />

</LinearLayout> 